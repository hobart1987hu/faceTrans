<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_recycle_view_item"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_shortcut"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:src="@mipmap/icon_default" />

        <ImageView
            android:id="@+id/iv_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/icon_tick" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_tick"
            android:layout_toRightOf="@id/iv_shortcut"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_path"
                style="@style/style_common_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:padding="4dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_size"
                style="@style/style_common_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="#cccccc"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_top"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="12dp"
        android:background="#cccccc" />
</RelativeLayout>
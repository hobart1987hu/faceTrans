<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen.AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="Splash.FullScreen.AppTheme" parent="FullScreen.AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RippleBorderBtnTheme">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="style_common_text">
        <item name="android:text">@string/str_name</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_home_text_view" parent="style_common_text">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:text">@string/str_has_selected</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_home_text_view</item>
    </style>

    <style name="style_home_big_text_view" parent="style_common_text">
        <item name="android:layout_width">196dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">@string/str_has_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_home_text_view_big</item>
    </style>

    <style name="style_home_bottom_image_view">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/ic_device_24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="style_home_bottom_text_view" parent="style_common_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="style_home_bottom_text_view2" parent="style_common_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">连接设备数</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="CustomeTabIndicator" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>
    <style name="style_common_bottom_text_view" parent="style_common_text">
        <item name="android:layout_width">@dimen/bottom_button_width</item>
        <item name="android:layout_height">@dimen/bottom_button_height</item>
        <item name="android:text">@string/str_has_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_bottom_text_next</item>
    </style>
</resources>
